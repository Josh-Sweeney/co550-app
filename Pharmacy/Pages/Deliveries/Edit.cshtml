@page
@model Pharmacy.Pages.Deliveries.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Delivery</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Delivery.DeliveryId" />
            <div class="form-group">
                <label asp-for="Delivery.PrescriptionId" class="control-label"></label>
                <select asp-for="Delivery.PrescriptionId" class="form-control" asp-items="ViewBag.PrescriptionId"></select>
                <span asp-validation-for="Delivery.PrescriptionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Delivery.Patient.FullName" class="control-label"></label>
                <select asp-for="Delivery.Patient.PatientId" class="form-control" asp-items="Model.Patients"></select>
                <span asp-validation-for="Delivery.Patient.FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
