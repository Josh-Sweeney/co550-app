@model Pharmacy.Pages.Deliveries.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Delivery[0].Prescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Delivery[0].Patient)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Delivery)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Prescription.PrescriptionId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.FullName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DeliveryId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DeliveryId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DeliveryId">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>